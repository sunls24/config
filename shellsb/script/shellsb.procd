#!/bin/ash /etc/rc.common

START=99
USE_PROCD=1

WORKDIR=/data/shellsb

start_service() {
    procd_open_instance
    procd_set_param respawn
    procd_set_param command ${WORKDIR}/sing-box -D ${WORKDIR} -c ${WORKDIR}/config.json run
    procd_set_param stderr 0
    procd_set_param stdout 0
    procd_close_instance
    ${WORKDIR}/start.sh >/dev/null 2>&1 &
}

stop_service() {
    ${WORKDIR}/stop.sh
    procd_close_instance
}
